{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"]
}
